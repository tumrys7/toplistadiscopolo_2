<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Edge-to-edge friendly system bar styling -->
        <item name="android:statusBarColor">@color/md_theme_background</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <!-- Ikony w status bar i navigation bar ciemne (tekst czarny) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Styl zaokrąglonych rogów dla obrazów (np. na wzór Spotify) -->
    <style name="RoundedImageViewShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item> <!-- lub 4dp dla dużych ekranów -->
    </style>
</resources>


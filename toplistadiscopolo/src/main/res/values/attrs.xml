<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for input handling -->
    <declare-styleable name="InputHandling">
        <attr name="enableInputChannelCleanup" format="boolean" />
        <attr name="clearFocusOnDestroy" format="boolean" />
    </declare-styleable>
    
    <!-- Splash Screen attributes -->
    <attr name="windowSplashScreenBackground" format="color|reference" />
    <attr name="windowSplashScreenAnimatedIcon" format="reference" />
    <attr name="postSplashScreenTheme" format="reference" />
</resources>

<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Sheet Content without CoordinatorLayout wrapper -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spotify_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:elevation="8dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="72dp"
    app:behavior_hideable="true"
    app:behavior_skipCollapsed="false">

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:visibility="gone" />

    <!-- Mini Player (Collapsed State) -->
    <LinearLayout
        android:id="@+id/mini_player"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <!-- Album Art -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mini_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                android:contentDescription="@string/album_art" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Track Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/mini_track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_title"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@color/md_theme_onSurface"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/mini_track_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_name"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_onSurface"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Play/Pause Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mini_play_pause_button"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:iconTint="@color/md_theme_onSurface"
            app:icon="@drawable/ic_play_arrow"
            app:iconSize="24dp" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mini_close_button"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:iconTint="@color/md_theme_onSurface"
            app:icon="@drawable/ic_close"
            app:iconSize="24dp" />

        <!-- Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Expanded Player -->
    <LinearLayout
        android:id="@+id/expanded_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:textColor="?android:attr/textColorSecondary"
        android:padding="24dp">

        <!-- Album Art -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/expanded_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_300"
                android:contentDescription="@string/album_art" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Track Info -->
        <TextView
            android:id="@+id/expanded_track_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textAlignment="center"
            android:textColor="@color/md_theme_onSurface"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/expanded_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_name"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/md_theme_onSurface"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Seek Bar -->
        <com.google.android.material.slider.Slider
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="100"
            app:trackColorActive="@color/md_theme_primaryContainer"
            app:trackColorInactive="@color/md_theme_onSecondary"
            app:thumbColor="@color/md_theme_primaryContainer"
            app:labelBehavior="gone" />

        <!-- Time Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Playback Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Previous Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/previous_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:iconTint="@color/md_theme_onSurface"
                app:icon="@drawable/ic_skip_previous"
                app:iconSize="32dp" />

            <!-- Play/Pause Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/md_theme_primaryContainer"
                android:src="@drawable/ic_play_arrow"
                app:fabSize="normal" />

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_skip_next"
                app:iconTint="@color/md_theme_onSurface"
                app:iconSize="32dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spotify_bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Sheet Content -->
    <LinearLayout
        android:id="@+id/spotify_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="72dp"
        app:behavior_hideable="true"
        app:behavior_skipCollapsed="false">

        <!-- Mini Player (Collapsed State) -->
        <LinearLayout
            android:id="@+id/mini_player"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- Album Art -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/mini_album_art"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher"
                    android:contentDescription="@string/album_art" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Track Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/mini_track_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_track_playing"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/mini_track_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Play/Pause Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mini_play_pause_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_play_arrow"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface" />

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mini_close_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_close"
                app:iconSize="20dp"
                app:iconTint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- Expanded Player -->
        <LinearLayout
            android:id="@+id/expanded_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Large Album Art -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/expanded_album_art"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher"
                    android:contentDescription="@string/album_art" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Track Title -->
            <TextView
                android:id="@+id/expanded_track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_track_playing"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <!-- Track Artist -->
            <TextView
                android:id="@+id/expanded_track_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Progress Bar -->
            <com.google.android.material.slider.Slider
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:labelBehavior="gone" />

            <!-- Time Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Playback Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Previous -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previous_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_skip_previous"
                    app:iconSize="32dp"
                    app:iconTint="?attr/colorOnSurface" />

                <!-- Play/Pause -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:fabSize="normal"
                    android:src="@drawable/ic_play_arrow"
                    app:tint="?attr/colorOnPrimaryContainer"
                    app:backgroundTint="?attr/colorPrimaryContainer" />

                <!-- Next -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_skip_next"
                    app:iconSize="32dp"
                    app:iconTint="?attr/colorOnSurface" />

            </LinearLayout>

            <!-- Spotify Attribution -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_spotify_logo"
                    android:contentDescription="Spotify"
                    app:tint="@color/spotify_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/powered_by_spotify"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
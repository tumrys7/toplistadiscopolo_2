<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <TextView
        android:id="@+id/miejsce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@layout/main"
        android:text="10"
        android:textColor="#343434"
        android:textSize="15dip"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@id/miejsce"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/rihanna" />
    </LinearLayout>

    <!-- Title Of Song -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:lines="1"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->


    <!-- Rightend Duration -->


    <!-- Rightend Arrow -->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/id_listy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="000000"
        android:textColor="#343434"
        android:textSize="10dip"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:lines="1"
        android:text="Just gona stand there and ..."
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/zmiana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artist"
        android:layout_below="@+id/id_listy"
        android:text="Awans o 3 | "
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_toRightOf="@+id/zmiana"
        android:text="@string/text_na_liscie_od"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/data_dodania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_toRightOf="@+id/TextView01"
        android:text="2012-01-01"
        android:textColor="#343434"
        android:textSize="10dip" />







<ProgressBar
    android:id="@+id/votesProgress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="wrap_content"
    android:layout_height="2dip"
    android:layout_alignBottom="@+id/thumbnail"
    android:layout_alignLeft="@+id/zmiana"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/zmiana"
    android:indeterminateOnly="false"
    android:maxHeight="5dip"
    android:maxWidth="150dip"
    android:minHeight="10dip"
    android:progress="23"
    android:progressDrawable="@drawable/progress_horizontal"
    android:scrollbarStyle="insideOverlay" />

    <TextView
        android:id="@+id/ile_glosow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_toRightOf="@+id/data_dodania"
        android:text=" | Głosów: 000000"
        android:textColor="#343434"
        android:textSize="10dip" />

</RelativeLayout>
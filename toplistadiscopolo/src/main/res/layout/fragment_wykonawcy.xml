<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="0dp">

        <EditText
            android:id="@+id/inputSearch"
            style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:autofillHints=""
            android:hint="@string/tab_wykonawcy_filtruj"
            android:inputType="textVisiblePassword"
            android:textColorHint="#546E7A"
            tools:ignore="VisualLintTextFieldSize" />

        <ImageButton
            android:id="@+id/clearButton"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48sp"
            android:minWidth="48sp"
            android:layout_gravity="end|center_vertical"
            android:background="@color/md_theme_onPrimaryContainer"
            android:src="@drawable/ic_clear_black_18dp" />

    </FrameLayout>

    <ListView
        android:id="@+id/listWykon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

</LinearLayout>